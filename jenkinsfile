pipeline {
   agent{
   node{
    label 'Agent-1'
  }
}
   environment { 
        GREETING = 'Hello Jenkins'
    }
    options {
        timeout(time: 1, unit: 'HOURS') 
        disableConcurrentBuilds()
    }
//build
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                 sh """
                  echo "Here I wrote Shell Script"
                  echo "$GREETING"
                  sleep 10
                 """
            }
        }
    }
  //post
      post { 
        always { 
            echo 'I will always say Hello again!'
        }
      failure{
        echo 'this run when pipeline is a failed,used generally to send some alerts'
      }
      success{
        echo 'I will always say Hello pipeline is success!'
      }
    }
}